//--------------------------------------------------------------------------------------------------
//= debugdraw.hsp
//--------------------------------------------------------------------------------------------------

	#if DEBUG_FLAG

		timer_start timer_cnt(), "デバッグ表示"

		//------------------------------------------------------------------------------------------
		//= 各座標のゴールまでの距離
		//------------------------------------------------------------------------------------------
			#if TRUE
				font msgothic, 9
				color 255,255,255
				repeat MAP_SIZE_WH
					x = cnt
					repeat MAP_SIZE_WH
						y = cnt
						if(MapGoalDis(x, y) != -1){
							pos x*TILE_SIZE_WH+6, y*TILE_SIZE_WH+6
							mes ""+MapGoalDis(x, y)
						}
					loop
				loop
				sysfont
			#endif

		//------------------------------------------------------------------------------------------
		//= バージョン情報(デバッグ中のみ)
		//------------------------------------------------------------------------------------------
			#if TRUE
				sysfont:color 255,255,255
				pos 8, WINDOW_SIZE_H-16-8
				mes ""+PROGRAM_NAME+" ver"+PROGRAM_VERSION
			#endif

			timer_end timer_cnt()

		//------------------------------------------------------------------------------------------
		//= メニューボードデバッグ表示
		//------------------------------------------------------------------------------------------
			#if TRUE
				color 255,255,255
				pos MENU_POS_X+8, MENU_POS_Y+8
				mes "----debug----"
				mes "カーソル:"+CursorPosX+","+CursorPosY
				mes "----timer----"
				repeat timer_cnt()
					mes ""+timer_put(cnt)
				loop
				mes ""+timer_total()
			#endif

		//------------------------------------------------------------------------------------------
		//= 再描画
		//------------------------------------------------------------------------------------------
			redraw 1

	#endif